program {
    if(hayAlMenos5BolitasEnLaCeldaActual() >= 5)
    {
        Mover(Norte)
        Poner(Verde)
    }
    else
    {
        Mover(Norte)
        Poner(Rojo)
    }
}

function hayAlMenos5BolitasEnLaCeldaActual() {
    /*PROPOSITO:Describe si en la celda hay al menos 5 bolitas en total.
    PRECONDICIONES:-.
    PARAMETROS:-.
    */
    return (nroBolitas(Rojo) + nroBolitas(Azul) + nroBolitas(Verde) + nroBolitas(Negro))
    }